<div class="mt-4">
    <h1>Đăng bài</h1>

    <form method="POST" action="/words/store">
        <div class="form-group">
            <label for="name">Tên bài</label>
            <input type="text" class="form-control" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="word">Từ vựng</label>
            <input type="text" class="form-control" id="word" name="word">
        </div>
        <div class="form-group">
            <label for="mean">Nghĩa</label>
            <input type="text" class="form-control" id="mean" name="mean">
        </div>
        <div class="form-group">
            <label for="video">Video ID</label>
            <input type="text" class="form-control" id="video" name="video">
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Thêm bài</button>
    </form>
</div>